{
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    { "source": "/api/auth/register", "destination": "/api/auth/register" },
    { "source": "/api/auth/login", "destination": "/api/auth/login" },
    { "source": "/api/auth/me", "destination": "/api/auth/me" },
    { "source": "/api/quotes/random", "destination": "/api/quotes/random" },
    { "source": "/api/quotes/daily", "destination": "/api/quotes/daily" },
    { "source": "/api/scores", "destination": "/api/scores/index" },
    { "source": "/api/scores/leaderboard", "destination": "/api/scores/leaderboard" },
    { "source": "/api/scores/my-scores", "destination": "/api/scores/my-scores" },
    { "source": "/api/scores/my-stats", "destination": "/api/scores/my-stats" },
    { "source": "/api/scores/history", "destination": "/api/scores/history" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
